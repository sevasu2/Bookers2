<div class="container top">

<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field", style="margin-bottom:10px;">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name",class: "name" %>
  </div>

  <div class="field", style="margin-bottom:10px;">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email",class: "email" %>
  </div>

  <div class="field", style="margin-bottom:10px;">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off",class: "password" %>
  </div>

  <div class="field", style="margin-bottom:10px;">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off",class: "password_confirm" %>
  </div>

  <div class="actions", style="margin-bottom:10px;">
    <%= f.submit "Sign up", class: "btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>